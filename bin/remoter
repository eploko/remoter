#!/usr/bin/env ruby
# encoding: utf-8

require 'remoter'

begin
  Remoter::CLI.start
rescue Remoter::RemoterError => e
  puts "ERROR: #{e.message}"
  puts "BACKTRACE:\n  #{e.backtrace.join("\n  ")}"
  exit e.status_code
rescue Interrupt => e
  puts "\nQuitting..."
  puts "BACKTRACE:\n  #{e.backtrace.join("\n  ")}"
  exit 1
end
